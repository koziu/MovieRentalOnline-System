@model List<MovieRentalOnline.ViewModels.CartItem>
@{
    Layout = null;
}







<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Dodaj do koszyka</h3>
    </div>
    <div class="panel-body" style="padding:0px;">
        <div class="well well-sm" style="margin-bottom:auto;">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="col-md-4"></th>
                        <th class="col-md-4"></th>
                        <th class="col-md-4"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cartItem in Model)
                    {
                        <tr>
                            <td @{if (cartItem.IsAvailable == false) { <text> style="color:red" </text>   } }>@cartItem.Product.StorageMedium.Name</td>
                            <td>@cartItem.Cost zł</td>
                            <td>
                                <button type="button" class="btn btn-xs" onclick="location.href='@Url.Action("AddToCart", "Cart", new { productId = cartItem.Product.ProductId })'">Dodaj</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

